/**
 * @fileoverview Firestore Security Rules for EduGenius platform.
 *
 * Core Philosophy:
 * This ruleset enforces a role-based access control model, supplemented by
 * ownership checks where applicable. It prioritizes Authorization Independence
 * and Structural Segregation to optimize security and performance.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles, accessible only to the user and admins.
 * - /classes/{classId}: Stores class information, access controlled based on
 *   teacher assignments.
 * - /subjects/{subjectId}: Stores subject information, access controlled by
 *   the assigned teacher.
 * - /subjects/{subjectId}/courses/{courseId}: Stores course information, access
 *   controlled by the parent subject's teacher.
 * - /class_students/{classStudentId}: Represents the relationship between a class
 *   and a student.
 * - /class_teachers/{classTeacherId}: Represents the assignment of a teacher to
 *   a class.
 * - /roles_admin/{userId}: Indicates admin role for a user. The existence of
 *   this document grants admin rights.
 *
 * Key Security Decisions:
 * - User listing is denied to prevent information leakage, except for admins.
 * - Admin privileges are determined by the existence of a document in the
 *   /roles_admin/{userId} collection.
 * - Read-only collections are not explicitly defined but can be achieved by
 *   allowing `get` and `list` while denying `create`, `update`, and `delete`.
 *
 * Denormalization for Authorization:
 * - The `Subject` entity includes a `teacherId` field to directly authorize
 *   course creation and modification under that subject.
 *
 * Structural Segregation:
 * - User-specific data is stored under /users/{userId} to ensure privacy.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the current user is signed in.
     * @returns {boolean} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user's UID matches the provided userId.
     * @param {string} userId The user ID to compare against the authenticated user's UID.
     * @returns {boolean} True if the user is the owner, false otherwise.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the authenticated user is an existing owner of the document.
     * @param {string} userId The user ID to compare against the document's owner ID.
     * @returns {boolean} True if the user is the owner and the document exists, false otherwise.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description Checks if the user has admin rights by checking if the document exists
     *              in `/roles_admin/{userId}`.
     * @returns {boolean} True if the user is an admin, false otherwise.
     */
    function isAdmin() {
        return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    /**
     * @description Rules for user profiles.
     * @path /users/{userId}
     * @allow (create) User with ID 'user123' creates their own profile.
     *     request.auth.uid == 'user123' and request.resource.data.id == 'user122'
     * @allow (get, update, delete) User with ID 'user123' reads, updates, or deletes their own profile.
     *     request.auth.uid == 'user123'
     * @deny (create) User with ID 'user123' tries to create a profile with a different ID 'user456'.
     *     request.auth.uid == 'user123' and request.resource.data.id == 'user456'
     * @principle Enforces document ownership and prevents unauthorized access to user profiles.
     */
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for class information.
     * @path /classes/{classId}
     * @allow (get, list) Admin read access to class information.
     * @allow (create) Admin creates a new class.
     * @allow (update, delete) Admin updates or deletes a class.
     * @deny (create, update, delete) Non-admin users cannot create, update, or delete classes.
     * @principle Allows public read access but restricts write access to admins.
     */
    match /classes/{classId} {
      allow get, list: if isAdmin();
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Rules for subject information.
     * @path /subjects/{subjectId}
     * @allow (get, list) Admin read access to subject information.
     * @allow (create) Teacher with ID 'teacher123' creates a new subject.
     *     request.auth.uid == 'teacher123' and request.resource.data.teacherId == 'teacher123'
     * @allow (update, delete) Teacher with ID 'teacher123' updates or deletes their own subject.
     *     request.auth.uid == 'teacher123' and resource.data.teacherId == 'teacher123'
     * @deny (create) Teacher with ID 'teacher123' tries to create a subject for another teacher 'teacher456'.
     *     request.auth.uid == 'teacher123' and request.resource.data.teacherId == 'teacher456'
     * @principle Enforces teacher ownership for subject creation and modification.
     */
    match /subjects/{subjectId} {
      allow get, list: if isAdmin();
      allow create: if (isSignedIn() && request.resource.data.teacherId == request.auth.uid) || isAdmin();
      allow update: if (isSignedIn() && resource != null && resource.data.teacherId == request.auth.uid) || isAdmin();
      allow delete: if (isSignedIn() && resource != null && resource.data.teacherId == request.auth.uid) || isAdmin();
    }

    /**
     * @description Rules for courses within a subject.
     * @path /subjects/{subjectId}/courses/{courseId}
     * @allow (get, list) Public read access to course information.
     * @allow (create) Teacher with ID 'teacher123' creates a new course under their subject.
     *     request.auth.uid == 'teacher123'
     *     and get(/databases/$(database)/documents/subjects/$(subjectId)).data.teacherId == 'teacher123'
     * @allow (update, delete) Teacher with ID 'teacher123' updates or deletes a course under their subject.
     *     request.auth.uid == 'teacher123'
     *     and get(/databases/$(database)/documents/subjects/$(subjectId)).data.teacherId == 'teacher123'
     * @deny (create) Teacher with ID 'teacher123' tries to create a course under a subject owned by another teacher.
     *     request.auth.uid == 'teacher123'
     *     and get(/databases/$(database)/documents/subjects/$(subjectId)).data.teacherId == 'teacher456'
     * @principle Enforces teacher ownership for course creation and modification, based on the parent subject.
     */
    match /subjects/{subjectId}/courses/{courseId} {
      allow get, list: if true;
      allow create: if isSignedIn() && get(/databases/$(database)/documents/subjects/$(subjectId)).data.teacherId == request.auth.uid;
      allow update: if isSignedIn() && resource != null && get(/databases/$(database)/documents/subjects/$(subjectId)).data.teacherId == request.auth.uid;
      allow delete: if isSignedIn() && resource != null && get(/databases/$(database)/documents/subjects/$(subjectId)).data.teacherId == request.auth.uid;
    }

     /**
      * @description Rules for the class-student relationship.
      * @path /class_students/{classStudentId}
      * @allow get, list: if isAdmin();
      * @allow create: if isAdmin();
      * @allow update: if isAdmin() && resource != null;
      * @allow delete: if isAdmin() && resource != null;
      * @principle Only admin can manage relationship between class and student
      */
     match /class_students/{classStudentId} {
      allow get, list: if isAdmin();
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Rules for the class-teacher relationship.
     * @path /class_teachers/{classTeacherId}
     * @allow get, list: if isAdmin();
     * @allow create: if isAdmin();
     * @allow update: if isAdmin() && resource != null;
     * @allow delete: if isAdmin() && resource != null;
     * @principle Only admin can manage relationship between class and teacher
     */
    match /class_teachers/{classTeacherId} {
      allow get, list: if isAdmin();
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }
    
    /**
     * @description Rules for admin roles.
     * @path /roles_admin/{userId}
     * @allow get: if isAdmin();
     * @allow list: if false;
     * @allow create: if (request.auth.token.email == 'nasmihael@gmail.com' && request.auth.uid == userId) || isAdmin();
     * @allow update: if false;
     * @allow delete: if isAdmin();
     */
    match /roles_admin/{userId} {
       allow get: if isAdmin();
       allow list: if false;
       allow create: if (request.auth.token.email == 'nasmihael@gmail.com' && request.auth.uid == userId) || isAdmin();
       allow update: if false;
       allow delete: if isAdmin();
    }
  }
}